<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Sign up</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, autofocus: true, class: "name" %><br>
          <%= f.label :email %><br>
          <%= f.email_field :email, autofocus: true, class: "email" %><br>
          <%= f.label :postcode %><br>
          <%= f.text_field :postcode, autocomplete: 'postcode' %><br>
          <%= f.label :prefecture_code %><br>
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, {prompt: '選択してください' } %><br>
          <%= f.label :address_city %><br>
          <%= f.text_field :address_city, autocomplete: 'address_city', class: "address_city" %><br>
          <%= f.label :address_street %><br>
          <%= f.text_field :address_street, autocomplete: 'address_complete', class: "address_street" %><br>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up" ,class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>